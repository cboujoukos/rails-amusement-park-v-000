<%= form_for @user do |f| %>
  <%= render 'shared/error_messages' %>
  <label>Name: </label> <br>
  <%= f.text_field :name %><br>
  <label>Password:</label><br>
  <%= f.password_field :password %><br>
  <label>Password Confirmation: </label><br>
  <%= f.password_field :password_confirmation %><br>
  <label>Height (in inches) </label><br>
  <%= f.text_field :height %><br>
  <label>How happy are you? (1-5 scale) </label><br>
  <%= f.text_field :happiness %><br>
  <label>How nauseous are you? (1-5 scale) </label><br>
  <%= f.text_field :nausea %><br>
  <label>How many dollars are in your pocket?</label><br>
  <%= number_field_tag 'user[tickets]', nil %><br>
  <label>Are you a theme park owner?</label>
  <%= f.check_box :admin, {}, true, false %>
  <br>

  <%= f.submit "Create User" %>

<% end %>
